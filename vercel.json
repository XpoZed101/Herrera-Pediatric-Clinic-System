{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.7.4",
      "config": {
        "maxLambdaSize": "250mb",
        "runtime": "vercel-php@0.7.4"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "\\/assets\\/(.*)",
      "dest": "public/assets/$1"
    },
    {
      "src": "\\/favicon\\.(ico|svg|png)",
      "dest": "public/$0"
    },
    {
      "src": "\\/(.*)",
      "dest": "api/index.php"
    }
  ]
}