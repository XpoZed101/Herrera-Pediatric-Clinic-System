{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "vercel-php@0.7.4",
      "config": {
        "maxLambdaSize": "250mb",
        "runtime": "vercel-php@0.7.4"
      }
    }
  ],
  "rewrites": [
        { "source": "/(.*)", "destination": "/public/index.php" }
      ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.php"
    }
  ]
}