{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php@0.7.4",
      "config": {
        "maxLambdaSize": "250mb",
        "runtime": "vercel-php@0.7.4"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "public/assets/$1" 
    },
    {
      "src": "/(.*\\.(?:css|js|png|jpg|jpeg|gif|svg|ico))$",
      "dest": "public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.php"
    }
  ]
}